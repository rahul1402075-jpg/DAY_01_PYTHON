# Enter your code here. Read input from STDIN. Print output to STDOUT
ch = input().strip()   
if len(ch) == 1 and ch.isalpha():
    if ch.lower() in ['a', 'e', 'i', 'o', 'u']:
        print(f"The Character {ch} is Vowel")
    else:
        print(f"The Character {ch} is Consonant")
else:
    print("Invalid Input")
